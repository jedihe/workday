<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="com.github.jedihe.workday.capture-mode">
        <value nick="screen" value="0"/>
        <value nick="window" value="1"/>
        <value nick="area" value="2"/>
    </enum>
    <schema id="com.github.jedihe.workday" path="/com/github/jedihe/workday/" gettext-domain="com.github.jedihe.workday">
        <key name="record-computer" type="b">
            <default>false</default>
        </key>
        <key name="record-microphone" type="b">
            <default>false</default>
        </key>
        <key name="format" type="s">
            <default>"x264enc-mp4"</default>
        </key>
        <key name="mouse-pointer" type="b">
            <default>true</default>
        </key>
        <key name="close-on-save" type="b">
            <default>true</default>
        </key>
        <key name="delay" type="i">
            <range min="0" max="15"/>
            <default>1</default>
        </key>
        <key name="framerate" type="i">
            <range min="1" max="120"/>
            <default>30</default>
        </key>
        <key name="folder-dir" type="s">
            <default>""</default>
        </key>
        <key name="fragment-length" type="i">
            <range min="10" max="600"/>
            <default>300</default>
        </key>
        <key name='last-capture-mode' enum='com.github.jedihe.workday.capture-mode'>
            <default>"screen"</default>
        </key>
    </schema>
</schemalist>
