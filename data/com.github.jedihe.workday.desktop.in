[Desktop Entry]
Name=Workday
Comment=Record a timelapse of your workday.
Exec=com.github.jedihe.workday
Icon=com.github.jedihe.workday
Terminal=false
Type=Application
Categories=GTK;GNOME;Utility;AudioVideo;Video;
Keywords=Screenshot;Screen;Record;Recording;
Actions=ScreenRecord;WindowRecord;AreaRecord;
X-GNOME-UsesNotifications=true

[Desktop Action ScreenRecord]
Name=Record the Whole Screen
Exec=com.github.jedihe.workday --screen

[Desktop Action WindowRecord]
Name=Record the Current Window
Exec=com.github.jedihe.workday --window

[Desktop Action AreaRecord]
Name=Record a Selected Area
Exec=com.github.jedihe.workday --area
